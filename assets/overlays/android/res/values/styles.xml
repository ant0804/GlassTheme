<resources>

    <!-- Definition of GlassTheme Start  -->
    <style name="android:style/Theme" parent="@android:style/Theme">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/Theme_bg</item>
    </style>
    <style name="Theme.Holo" parent="@android:style/Theme.Holo">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/Theme_bg</item>
    </style>
    <style name="Theme.Holo.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/Theme_Light_bg</item>
    </style>
    <!-- Definition of GlassTheme End -->

    <!-- Definition of ActionBar Start -->
    <style name="Widget.ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/ActionBar_bg</item>
    </style>
    <style name="Widget.Holo.ActionBar" parent="@style/Widget.ActionBar">
        <item name="android:background">@color/ActionBar_bg</item>
        <!--item name="android:backgroundStacked">@color/ActionBar_bg</item-->
        <!--item name="android:backgroundSplit">@drawable/ab_bottom_transparent_dark_holo</item-->
    </style>
    <style name="Widget.Holo.ActionBar.Solid" parent="@style/Widget.Holo.ActionBar" />
    <style name="Widget.Holo.Light.ActionBar" parent="@style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ActionBar_Light_bg</item>
        <!--item name="android:backgroundStacked">@color/ActionBar_bg</item-->
        <!--item name="android:backgroundSplit">@drawable/ab_bottom_transparent_dark_holo</item-->
    </style>
    <style name="Widget.Holo.Light.ActionBar.Solid" parent="@style/Widget.Holo.Light.ActionBar" />
    <style name="Theme.Holo.Light.DarkActionBar" parent="@style/Theme.Holo" />

    <!-- Definition of ActionBar End -->

    <!-- Definition of switcher Start -->
    <style name="Widget.Holo.CompoundButton.Switch" parent="@android:style/Widget.CompoundButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:thumb">@drawable/bg_weather_panel_app</item>
        <!--item name="android:switchTextAppearance">@style/TextAppearance.Holo.Widget.Switch</item-->
        <item name="android:track">@drawable/switch_selector</item>
        <item name="android:switchMinWidth">180.0px</item>
        <item name="android:switchPadding">0.0dip</item>
        <item name="android:thumbTextPadding">12.0dip</item>
    </style>

    <style name="Widget.Holo.Light.CompoundButton.Switch"
        parent="@style/Widget.Holo.CompoundButton.Switch">
        <item name="android:thumb">@drawable/bg_weather_panel_app</item>
        <item name="android:track">@drawable/switch_selector</item>
    </style>
    <!-- Definition of switcher End -->

    <!-- Definition of Dialog Start -->
    <style name="Theme.Holo.Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/dialog_full_holo_dark</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="Theme.Holo.Light.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>

    <!-- Definition of Dialog End -->

    <style name="TextAppearance.Holo" parent="@android:style/TextAppearance" />
    <style name="TextAppearance.Holo.Light" parent="@style/TextAppearance.Holo" />


    <!-- Framework Slider Buttons Textcolor>
